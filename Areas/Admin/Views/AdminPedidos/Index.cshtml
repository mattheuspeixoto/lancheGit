@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>
<form method="get" class="form-inline">
        <div class="row">
                <div class="col-md-6">
                        <input name="filter" class="form-control" placeholder="Pesquisar"value="@Model.RouteValue["Filter"]" />
                </div>
                <div class="col-md-6">
                        <button type="submit" class="btn btn-success">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
                        </button>
                </div>
        </div>
</form>
<br>
Total de Pedidos: @Model.TotalRecordCount

<p>
    <a asp-action="Create">Criar Novo Pedido</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sobrenome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cep)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoEnviado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoEntregueEm)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoEnviado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PedidoId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PedidoId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PedidoId">Delete</a> |
                    <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId">Ver Itens</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
<div style="position: fixed; right: 0; margin-right:10px" >
    <vc:pager paging-list="@Model"></vc:pager>
</div>
