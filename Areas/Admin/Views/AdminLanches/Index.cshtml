@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Lanche>

@{
        ViewData["Title"] = "Index";
}

<h1>Produtos</h1>
<form method="get" class="form-inline">
        <div class="row">
                <div class="col-md-6">
                        <input name="filter" class="form-control" placeholder="Pesquisar" value="@Model.RouteValue["Filter"]" />
                </div>
                <div class="col-md-6">
                        <button type="submit" class="btn btn-success">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
                        </button>
                </div>
        </div>
</form>

<br>
Total de Lanches: @Model.TotalRecordCount

<p>
        <a asp-action="Create">Criar Novo Lanche</a>
</p>
<div class="row">
        <div class="col-md-10">
                <table class="table">
                        <thead>
                                <tr>
                                        <th>
                                                @* @Html.DisplayNameFor(model => model.ImagemUrl) *@
                                        </th> 
                                        <th>
                                                @Html.DisplayNameFor(model => model.Nome)
                                        </th>
                                        <th>
                                                @Html.DisplayNameFor(model => model.DescricaoCurta)
                                        </th>
                                        <th>
                                                @Html.DisplayNameFor(model => model.Preco)
                                        </th>                                      
                                        
                                        <th>
                                                @Html.DisplayNameFor(model => model.IsLanchePreferido)
                                        </th>
                                        <th>
                                                @Html.DisplayNameFor(model => model.EmEstoque)
                                        </th>
                                        <th>
                                                @Html.DisplayNameFor(model => model.Categoria)
                                        </th>
                                        <th></th>
                                </tr>
                        </thead>
                        <tbody>
                                @foreach (var item in Model)
                                {
                                        <tr>
                                                <td>
                                                        @* @Html.DisplayFor(modelItem => item.ImagemUrl) *@
                                                        <img src="@item.ImagemUrl">
                                                </td>
                                                <td>
                                                        @Html.DisplayFor(modelItem => item.Nome)
                                                </td>
                                                <td>
                                                        @Html.DisplayFor(modelItem => item.DescricaoCurta)
                                                </td>
                                                <td>
                                                        @item.Preco.ToString("c")
                                                </td>
                                                
                                                <td>
                                                        @Html.DisplayFor(modelItem => item.IsLanchePreferido)
                                                </td>
                                                <td>
                                                        @Html.DisplayFor(modelItem => item.EmEstoque)
                                                </td>
                                                <td>
                                                        @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                                                </td>
                                                <td>
                                                        <a asp-action="Edit" asp-route-id="@item.LancheId">Edit</a> |
                                                        <a asp-action="Details" asp-route-id="@item.LancheId">Details</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.LancheId">Delete</a>
                                                </td>
                                        </tr>
                                }
                        </tbody>
                </table>
        </div>
</div>
<div style="position:absolute; right: 0; margin-right:10px">
        <vc:pager paging-list="@Model"></vc:pager>
</div>
