@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>
<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="Pesquisar" value="@Model.RouteValue["Filter"]"/>
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
    </button>
</form>

Total de Categorias: @Model.TotalRecordCount

<p>
    <a asp-action="Create">Criar Nova Categoria</a>
</p>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoriaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div style="position:absolute; right: 0; margin-right:10px">
    <vc:pager paging-list="@Model"></vc:pager>
</div>