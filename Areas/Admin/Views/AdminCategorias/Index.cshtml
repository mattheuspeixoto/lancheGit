@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center;">Categorias</h1>
<p>
    <a asp-action="Create">Criar Nova Categoria</a>
</p>
<form method="get" class="form-inline">
    <div class="input-group">
        <input name="filter" class="form-control" placeholder="Pesquisar" value="@Model.RouteValue["Filter"]" />
        <span class="input-group-btn" style="margin-left: 5px;">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
            </button>
        </span>
    </div>
</form>
<br>
Total de Categorias: @Model.TotalRecordCount
<br>
<div class="table-pagination-container" style="position: relative;">
<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th style="text-align:center"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td style="text-align:center">
                <div class="btn-group d-flex flex-column flex-sm-row" role="group" aria-label="Opções">
                   <a class="btn-outline-warning"  style="margin-right:5%;" asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> 
                   <a class="btn-outline-success"  style="margin-right:5%;" asp-action="Details" asp-route-id="@item.CategoriaId">Details</a> 
                   <a class="btn-outline-danger" asp-action="Delete" asp-route-id="@item.CategoriaId">Delete</a>
                </div>
            </td>         
        </tr>
}
    </tbody>
</table>
</div>
<div style="position:absolute; right: 0;">
    <vc:pager paging-list="@Model"></vc:pager>
</div>
</div>