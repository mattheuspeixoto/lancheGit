@model LanchesMac.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align: center;">Detalhes da Categoria</h1>

<div>
    <hr />
    <dl class="row">
        <div class="input-group">
            <dt class="col-sm-2"style="padding-right:2%;">
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoriaNome)
            </dd>
        </div>
        <div class="input-group">
            <dt class="col-sm-2"style="padding-right:2%;">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </div>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.CategoriaId">Editar</a>
    <a class="btn btn-outline-info" asp-action="Index">Voltar</a>
</div>
