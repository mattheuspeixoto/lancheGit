@model LancheListViewModel;


<div style="text-align:center">
    <h2> @ViewData["Titulo"]</h2>
    <p>@ViewData["Data"]</p>
</div>
<hr />
<h5><b> @ViewBag.Total</b> @ViewBag.totallanhces</h5>
<hr />


<div class="container">
    <div class="row">

        @foreach (var lanche in Model.lanches)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@lanche.ImagemUrl" class="img-fluid"></p>
                <h4> @lanche.Nome </h4>
                <p> <b>Preço:</b> @lanche.Preco.ToString("c") </p>
                <p>@lanche.DescricaoCurta</p>
            </div>
        }
    </div>
</div>