@model Lanche;

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="">
            </div>
            <div class="card-block">
                <h2 class="card-title" style="text-align: center;">@Model.Nome</h2>
                <p class="card-text">
                <h5><b>Descrição: </b> @Model.DescricaoDetalhada</h5>
                    @* <h5><b>Descricao Curta:</b>@Model.DescricaoCurta</h5> *@
                <h5><b>Categoria: </b>
                    <a asp-controller="Lanche" asp-action="List"
                        asp-route-categoria="@Model.Categoria.CategoriaNome"style="color:black">@Model.Categoria.CategoriaNome</a>
                </h5>
                <h5><b>Preço: </b>@Model.Preco.ToString("c")</h5>
                </p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">Ver todos os Lanches</a>
                    <a class="btn btn-outline-info" id="cartButton" asp-controller="CarrinhoCompra" 
                        asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">Adicionar
                        @Model.Nome ao carrinho</a>
                </p>
            </div>
        </div>
    </div>
</div>