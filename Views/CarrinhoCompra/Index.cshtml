@model CarrinhoCompraViewModels

<div class="container">
    <div class="row">
        <div>
            <img src="~/images/Full-Cart-icon.png" width="30" height="35" />
            <h4>Seu carrinho de compras : </h4>
        </div>


        @* <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive d-none d-lg-block"> *@
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">Quantidade</th>
                                    <th class="text-center">Lanche</th>
                                    <th class="text-center">Preço</th>
                                    <th class="text-center">Subtotal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.vmCarrinhoCompra.CarrinhoCompraItems) {
                                    <tr>
                                        <td class="text-center">
                                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemNoCarrinhoCompra" asp-route-lancheId="@item.Lanche.LancheId">-</a>
                                            @item.Quantidade
                                            <a asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@item.Lanche.LancheId">+</a>
                                        </td>
                                        <td class="text-center">@item.Lanche.Nome</td>
                                        <td class="text-center">@item.Lanche.Preco.ToString("c")</td>

                                        <td class="text-center">
                                            @((item.Quantidade * item.Lanche.Preco).ToString("c"))
                                        </td>

                                        <td class="text-center">
                                            <a asp-controller="CarrinhoCompra" asp-action="Remover"
                                               asp-route-lancheId="@item.Lanche.LancheId"><img src="~/images/delete.png"></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan=3 style="text-align:right;padding-right:80px"><b>Total:</b></td>
                                    <td colspan="3" class="text-right">
                                        <b>  @Model.vmCarrinhoCompraTotal.ToString("c")</b>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                   @*  </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.vmCarrinhoCompra.CarrinhoCompraItems) {
                    <div class="col-md-6">
                        <div class="card mb-3 d-block d-lg-none">
                            <div class="card-body">
                                <h5 class="card-title">@item.Lanche.Nome</h5>
                                <p class="card-text">
                                    Quantidade:
                                    <a asp-controller="CarrinhoCompra" asp-action="RemoverItemNoCarrinhoCompra" asp-route-lancheId="@item.Lanche.LancheId">-</a>
                                    @item.Quantidade
                                    <a asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@item.Lanche.LancheId">+</a>
                                </p>
                                <p class="card-text">Preço: @item.Lanche.Preco.ToString("c")</p>
                                <p class="card-text">Subtotal: @((item.Quantidade * item.Lanche.Preco).ToString("c"))</p>
                                <a asp-controller="CarrinhoCompra" asp-action="Remover" asp-route-lancheId="@item.Lanche.LancheId" class="btn btn-danger">Remover</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-md-6">
                    <div class="card mb-3 d-block d-lg-none">
                        <div class="card-body">
                            <h5 class="card-title">Total do Pedido</h5>
                            <p class="card-text">Total: @Model.vmCarrinhoCompraTotal.ToString("c")</p>
                        </div>
                    </div>
                </div>
            </div> *@
        </div>

        <div class="text-right">
            <div class="btn-group">
                @if (Model.vmCarrinhoCompra.CarrinhoCompraItems.Count > 0) {
                    <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
                }
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">Continuar Pedindo</a>
            </div>
        </div>
        <br />
    </div>
</div>
